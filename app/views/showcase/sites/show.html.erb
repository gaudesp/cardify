<article>
  <% if @is_mobile %>
    <% @pages.each do |page| %>
      <section data-scroll-target="section" data-slug="<%= page.slug %>" id="<%= page.slug %>">
        <%= render page %>
      </section>
    <% end %>
  <% else %>
    <section id="<%= @page.slug %>">
      <turbo-frame id="page_content">
        <%= render @page %>
      </turbo-frame>
    </section>
  <% end %>
</article>
