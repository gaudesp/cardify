<nav>
  <% if user_signed_in? %>
    <span>Connecté en tant que <%= current_user.email %></span>
    <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, data: { turbo_method: :delete } %>
  <% else %>
    <%= link_to "Se connecter", new_user_session_path %>
  <% end %>
</nav>

<ul>
  <% @sites.each do |site| %>
    <li>
      <%= link_to site.title, site_path(site.slug) %>
    </li>
  <% end %>
</ul>
