<div class="fixed top-6 right-6 z-50 space-y-4 max-w-sm">
  <% flash.each do |type, message| %>
    <% icon = {
      notice: "circle-check",
      alert: "triangle-exclamation"
    }[type.to_sym] || "circle-info" %>

    <% alert_class = {
      notice: 'bg-blue-100 border-blue-400 text-blue-700',
      alert: 'bg-yellow-100 border-yellow-400 text-yellow-700'
    }[type.to_sym] || 'bg-gray-100 border-gray-400 text-gray-700' %>

    <div
      data-controller="flash"
      data-action="click->flash#close"
      class="flash-message cursor-pointer transform transition-transform duration-300 ease-in-out hover:translate-x-1 border-l-4 p-5 rounded-lg shadow-2xl text-sm <%= alert_class %> animate-fade-in-opacity"
      role="alert"
    >
      <p class="flex items-start gap-2 leading-relaxed">
        <span><i class="fa-solid fa-<%= icon %>"></i></span>
        <span><%= message %></span>
      </p>
    </div>
  <% end %>
</div>
