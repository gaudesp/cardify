<div data-nested-form-target="item" class="mb-4 border rounded p-4 space-y-2 bg-gray-50">
  <%= f.hidden_field :_destroy %>

  <div class="float-right">
    <button type="button"
      data-action="nested-form#remove"
      class="inline-flex items-center gap-2 rounded bg-red-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-red-700 focus:outline-none">
      <i class="fa-solid fa-xmark"></i>
    </button>
  </div>

  <div>
    <%= f.select :platform, SocialLink::ICONS.keys.map { |k| [k.to_s.titleize, k] },
          include_blank: true,
          class: "block w-full p-2 border rounded focus:outline-none" %>
  </div>

  <div>
    <%= f.url_field :url, placeholder: "URL", class: "block w-full p-2 border rounded bg-white focus:outline-none" %>
  </div>
</div>
