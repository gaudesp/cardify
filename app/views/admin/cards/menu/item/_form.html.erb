    <%= f.number_field :price, placeholder: "Prix", step: 0.01, style: "width: 10%;", class: "focus:outline-none bg-white border border-t-0 border-l-0 rounded-none px-2 py-1 h-[38px]" %>
    <%= f.text_field :ingredients, placeholder: "IngrÃ©dients", style: "width: 45%;", class: "focus:outline-none bg-white border border-t-0 border-l-0 rounded-none px-2 py-1 h-[38px]" %>
