<article>
  <section>
    <%= render "admin/shared/visit_button", site: @site %>
    <header>
      <h2><span>P</span>ages du site</h2>
    </header>
    <div class="container">
      <div class="col">
        <%= link_to new_admin_site_page_path(@site), class: "inline-flex items-center gap-2 mb-4 rounded bg-green-600 px-3 py-1.5 text-sm font-medium text-white hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500" do %>
          <i class="fa-solid fa-plus"></i>
          Ajouter
        <% end %>
        <%= render "admin/pages/list", pages: @site.pages.order(:position) %>
      </div>
    </div>
  </section>
</article>
